@page
@model RealEstate.Pages.HousesModel
@{
    var TheHousesList = (List<HouseData.Houses>)ViewData["UserHousesList"];
}

<h1>Top 15 Housing List in Chicago</h1>
<hr />
<div class="text-center">
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th>Sr. no.</th>
                <th>House Name</th>
                <th>Postal Address</th>
                <th>House Area</th>
                <th>Unit Area (in sqfts)</th>
                <th>Housing Company</th>
                <th>Contact Number</th>
            </tr>
        </thead>

        <tbody>
            @{
                int FirstFifteenHouses = 0;
                foreach (HouseData.Houses house in TheHousesList)
                {
                    FirstFifteenHouses = FirstFifteenHouses + 1;
                        <tr>
                            <td>@FirstFifteenHouses</td>
                            <td>@house.PropertyName</td>
                            <td>@house.Address</td>
                            <td>@house.CommunityArea</td>
                            <td>@house.Units</td>
                            <td>@house.ManagementCompany</td>
                            <td>@house.PhoneNumber </td>
                        </tr>

                    if (FirstFifteenHouses == 15)
                    { break; }


                }
            }
        </tbody>
    </table>
</div>

