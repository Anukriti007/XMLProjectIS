@page
@model IndexModel
@{
    ViewData["Title"] = "";
    var MovieList = (List<MovieDetails.Item>)ViewData["UserMoviesList"];

}

<head>
    <link rel="stylesheet" href="/css/StyleSheet.css" type="text/css" />
    <style>
        .bg-img {
            background-image: url("https://pickamovieforme.b-cdn.net/wp-content/uploads/2020/06/bg.jpg");
            background-color: #cccccc;
            @*background-position: center;*@
            background-repeat: no-repeat;
            @*background-size: cover;*@
            @*position: relative;
            background-size: cover;*@
            position: fixed;
            width: 100%;
            height: 100%;
        }

        .content {
            color: white;
            font-size: 25px
        }
    </style>
</head>

<body>

    <div class="bg-img container-fluid">
    </div>
    <div class=" container-fluid pt-3 content" >
        <div class="row">
            <div class="col-6">
                <h2>
                    Welcome to

                </h2>

                <h1>
                    BingeWatch.com!!!
                </h1>
            </div>
            <div class="col-sm-6 search">
                <form action="/ItemData" method="get" class="form-inline col-sm-12">
                    <input asp-for="MovieIdentifier" class=" form-control mr-sm-2 col-sm-6" placeholder="Search a Movie" />
                    <button type="submit" class="btn btn-primary col-sm-4">Search</button>
                </form>
            </div>

        </div>

        <div class="row">

            <div class="col-12">
                <br />
                <p>
                    BingeWatch lets you find the best 250 Movies 🎬 and TV Shows 📺 and check reviews and ratings from IMDB.
                    Experience a User-friendly interface to find movies or shows for your next watch.

                </p>
            </div>

            @* <div class="col-12">
                <img src="/img/image2.png" alt="Home Image" />
            </div>*@
        </div>
    </div>


</body>









