@page
@model BreweryArcsPage.Pages.BreweryArcsModel
@{
    var breweryarcs = (BreweryArcData.BreweryArcs[])ViewData["BreweryArcs"];
}

<head>
    <link rel="stylesheet" href="/css/StyleSheet.css" type="text/css" />
    <style>
        .bg-img1 {
            background-image: url("https://media.istockphoto.com/photos/beer-tasting-picture-id488101157?b=1&k=20&m=488101157&s=170667a&w=0&h=Jyg9GeyKOj4CzL7oND2AvUsV9pB0EqxfF7UcbTjsH24=");
            background-color: #cccccc;
            background-repeat: no-repeat;
            position: fixed;
            width: 100%;
            height: 100%;
        }

        body {
            background-image: url("https://media.istockphoto.com/photos/beer-tasting-picture-id488101157?b=1&k=20&m=488101157&s=170667a&w=0&h=Jyg9GeyKOj4CzL7oND2AvUsV9pB0EqxfF7UcbTjsH24=");
            background-size: cover;
        }

        .white {
            color: white;
            font-weight: 500;
        }
    </style>
</head>
<body style="font-family: Bahnschrift">
    <h2 class="text-center white"><strong>Thinking of drinking beer while watching a movie?</strong></h2>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Name</th>
                            <th>City</th>
                            <th>Phone</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int FirstFifteenBrewery = 0;
                            foreach (BreweryArcData.BreweryArcs breweryarc in breweryarcs)
                            {
                                FirstFifteenBrewery = FirstFifteenBrewery + 1;
                                <tr>
                                    <td>@FirstFifteenBrewery</td>
                                    <td>@breweryarc.Name</td>
                                    <td>@breweryarc.City</td>
                                    <td>@breweryarc.Phone</td>
                                </tr>

                                if (FirstFifteenBrewery == 15)
                                { break; }


                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</body>
