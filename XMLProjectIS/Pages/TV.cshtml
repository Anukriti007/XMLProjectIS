@page
@model XMLProjectIS.Pages.TVModel
@{
    TV.Item[] tvdetails = (TV.Item[])ViewData["TVDetails"];
}


<head>
    <link rel="stylesheet" href="/css/StyleSheet.css" type="text/css" />
</head>


<body style="margin-top: 56px; font-family: Bahnschrift">
    <div class="text-center">
        <h1 class="display-4">Latest Top 250 TV Shows</h1>
    </div>


    <div class="TVContainer">
        @foreach (TV.Item TVs in tvdetails)
        {
            <div class="TvCard">
                <div>
                    <img src="@TVs.Image" class="TVImg" alt="Img Not Found" />
                </div>
                <div class="TVTitle">
                    <a asp-page="./Details" asp-route-id="@TVs.Id">
                        <strong>
                            <label>@TVs.Title</label>
                        </strong>
                    </a>

                </div>
                <div class="TVTitle">
                    <label>IMDB Rating:-</label>
                    <label>@TVs.ImDbRating</label>
                </div>
            </div>
        }
    </div>

</body>