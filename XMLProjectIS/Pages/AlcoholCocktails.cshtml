@page
@model AlcoholCocktail.Pages.AlcoholCocktailsModel
@{
    var alcoholcocktails = (AlcoholCocktailData.AlcoholCocktails[])ViewData["AlcoholCocktails"];
}
<h1>Top 15 Cocktails</h1>
<hr />
<div class="text-center">
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>

        <tbody>
            @{
                int FirstFifteenCocktails = 0;
                foreach (AlcoholCocktailData.AlcoholCocktails alcoholcocktail in alcoholcocktails)
                {
                    FirstFifteenCocktails = FirstFifteenCocktails + 1;
                    <tr>
                        <td>@FirstFifteenCocktails</td>
                        <td>@alcoholcocktail.Drinks</td>
                    </tr>

                    if (FirstFifteenCocktails == 15)
                    { break; }


                }
            }
        </tbody>
    </table>
</div>