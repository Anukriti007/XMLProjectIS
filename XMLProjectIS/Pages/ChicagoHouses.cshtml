           <div class="container">
               <div class="row">
                   <div class="col-12">
                       <table class="table table-dark">
                           <thead>
                               <tr>
                                   <th scope="col">Sr. no.</th>
                                   <th scope="col">Postal Address</th>
                                   <th scope="col">Unit Area (in sqfts)</th>
                               </tr>
                           </thead>

                           <tbody>
                               @{
                                   int FirstFifteenHouses = 0;
