@page
@model ChicagoHousePage.Pages.ChicagoHousesModel
@{
    var chicagohouses = (ChicagoHousesData.ChicagoHouses[])ViewData["ChicagoHouses"];
}
<head>
    <link rel="stylesheet" href="/css/StyleSheet.css" type="text/css" />
    <style>
    .bg-img1 {
    background-image: url("https://wallpaperaccess.com/full/306430.jpg");
    background-color: #cccccc;
    @*background-position: center;
    *@ background-repeat: no-repeat;
    @*background-size: cover;
    *@ @*position: relative;
        background-size: cover;
    *@ position: fixed;
    width: 100%;
    height: 100%;

    }
    </style>
</head>

<body>
    <div class="bg-img1 container-fluid">
    </div>

    <div class="container-fluid pt-3 content">
        <h2 class="text-center">Looking for an ideal home in Chicago?</h2>

        <p>

        </p>

        <hr />
        <div class="text-center">
            <table class="table table-striped table-light">
                <thead>
                    <tr>
                        <th>Sr. no.</th>
                        <th>Postal Address</th>
                        <th>Unit Area (in sqfts)</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int FirstFifteenHouses = 0;
                        foreach (ChicagoHousesData.ChicagoHouses chicagohouse in chicagohouses)
                        {
                            FirstFifteenHouses = FirstFifteenHouses + 1;
                            <tr>
                                <td>@FirstFifteenHouses</td>
                                <td>@chicagohouse.Address</td>
                                <td>@chicagohouse.Units</td>
                            </tr>

                            if (FirstFifteenHouses == 15)
                            { break; }


                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>